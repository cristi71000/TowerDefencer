# *.mp4 filter=lfs diff=lfs merge=lfs -text
# *.mov filter=lfs diff=lfs merge=lfs -text

# ===============================
# Export Ignore (for archive exports)
# ===============================
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore
